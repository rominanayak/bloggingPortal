@model bloggingPortal.Models.Blog

@{
    ViewData["Title"] = "Blog";
}

<h2>@Model.Title</h2>
<p>@Model.Summary</p>
<p>@Model.Body</p>


<h3>Comments</h3>

    @foreach (var comment in Model.Comments)
    {
    <div class="comment">
        <small>@comment.DateTime | @comment.UserName</small>
        <p>@comment.Body</p>
        <hr />
    </div>
    }

@using (Html.BeginForm())
{
    <p>Author: @Html.TextBox("NewComment.UserName")</p>
    <p>Text : @Html.TextArea("NewComment.Body")</p>
    <p><input type="submit" value="Submit" /></p>

}

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
